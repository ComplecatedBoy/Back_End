<%-include("includes/head.ejs")%>
<body>
    <h2>This page belongs to @<%= user.name %></h2>
    <button type="button">Follow</button>
    <button type="button">Message</button>
    <p>Following: <%=user.followers%>&nbsp;&nbsp;&nbsp;&nbsp;Following: <%= user.following%></p>
